package com.justin.shippingSystem;

import java.util.List;

import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;



public class testReporter {
	List<Parcel> listToTest;
	Reporter reporterUnderTest;
	@Before
	public void init(){
		reporterUnderTest = new Reporter();
		Parcel parcel1 = new Box("id 100", "430 home st sycamore il", 10, 11, 1);
		Parcel parcel2 = new Box("id 101", "431 home st sycamore il", 11, 1, 12);
		Parcel parcel3 = new Letter("id 102", "432 home st sycamore il", 3.30);
		Parcel parcel4 = new Letter("id 103", "433 home st sycamore il", 6.60);
		listToTest.add(parcel1);
		listToTest.add(parcel2);
		listToTest.add(parcel3);
		listToTest.add(parcel4);
		
		//Assert.assertEquals(" ", animal.sayMyName());
	}
	@Test
	public void testCanTakeList() {
		Assert.assertEquals(1, reporterUnderTest.addListPackagesToManager(listToTest));
	}
	@Test
	public void testCanPrintList() {
		reporterUnderTest.addListPackagesToManager(listToTest);
		Assert.assertEquals(1, reporterUnderTest.printList());
	}

}
