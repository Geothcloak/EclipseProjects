package com.justin.fileio;

public class Wizard extends PlayerCharacter{
	private static final String WIZARD = "Wizard";
	private String classType;
	private String feat;
	private DestructiveSpell destructiveSpell;
	
	public Wizard(String name, Stats stats, String feat, DestructiveSpell destructiveSpell) {
		super(name, stats);
		this.classType = WIZARD;
		this.feat = feat;
	}
	public DestructiveSpell getDestructiveSpell(){
		return destructiveSpell;
	}
	@Override
	public String getClassType() {
		return classType;
	}

	@Override
	public String getFeat() {
		return feat;
	}
	@Override
	public String eatFood() {
		return "ate a fish";
	}

}
